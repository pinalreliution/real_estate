<?xml version="1.0"?>
<odoo>

    <record id="view_create_token_wizard_form" model="ir.ui.view">
        <field name="name">view.create.token.wizard.form</field>
        <field name="model">create.token.wizard</field>
        <field name="arch" type="xml">
            <form string="Token">
                <group class="oe_title">
                    <field name="name"/>
<!--                    <field name="salesman_id"/>-->
<!--                    <field name="buyer_id"/>-->
<!--                    <field name="property_type_id"/>-->
<!--                    <field name="postcode"/>-->
                </group>
                <footer>
                    <button name="action_create_button" type="object" string="Create" class="btn-secondary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel" data-hotkey="z"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_create_token" model="ir.actions.act_window">
        <field name="name">Create Token</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">create.token.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_create_token_wizard_form"/>
        <field name="target">new</field>
    </record>

</odoo>
