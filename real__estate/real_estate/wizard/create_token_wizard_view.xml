<?xml version="1.0"?>
<odoo>

    <record id="create_token_wizard_view_form" model="ir.ui.view">
        <field name="name">create.token.wizard.view.form</field>
        <field name="model">create.token.wizard</field>
        <field name="arch" type="xml">
            <form string="Token">
                <group class="oe_title">
                    <field name="name"/>
                </group>
                <footer>
                    <button string="Cancel" class="btn-secondary" special="cancel" data-hotkey="z"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_create_token_wizard" model="ir.actions.act_window">
        <field name="name">Create Token</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">create.token.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="create_token_wizard_view_form"/>
        <field name="target">new</field>
    </record>

</odoo>
