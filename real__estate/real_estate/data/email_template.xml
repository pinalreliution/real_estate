<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="email_template_real_estate" model="mail.template">
            <field name="name">Real Estate</field>
            <field name="model_id" ref="real_estate.model_real_estate"/>
            <field name="subject">Property Details</field>
            <field name="email_from">{{ (object.salesman_id.email_formatted or '') }}</field>
            <field name="partner_to">{{ object.buyer_id or False }}</field>
            <field name="body_html" type="html">
                <p>Dear <span t-field="object.buyer_id.name"/>,</p>
                <p>Your property name is <span t-out="object.name"/>,</p>
                <p>Your property type is <span t-field="object.property_type_id"/> </p>
            </field>
        </record>

    </data>
</odoo>